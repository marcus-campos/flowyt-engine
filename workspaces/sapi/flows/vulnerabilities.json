{
    "id": "get_contracts",
    "name": "Get contracts",
    "pipeline": [
        {
            "action": "start",
            "data": {},
            "id": "start",
            "next_action": "flow_var_sql"
        },
        {
            "id": "flow_var_sql",
            "action": "flow_var",
            "data": {
                "sql": "SELECT cliente.nomefantasia, cliente.numcontratoservicenow, v.* FROM sapi.vulnerabilidades as v INNER JOIN sapi.tbauditoria as audit ON v.id_audit = audit.id_audit INNER JOIN sapi.tbcliente as cliente ON audit.id_cliente = cliente.id_cliente WHERE cliente.id_cliente = 203 AND cliente.numcontrato <> '';"
            },
            "next_action": "sql_db_sapi_select_vulnerabilities"
        },
        {
            "id": "sql_db_sapi_select_vulnerabilities",
            "action": "sql_db",
            "data": {
                "conn_name": "sapi",
                "sql": "${flow.sql}"
            },
            "next_action": "flow_var_vulnerabilities_data"
        },
        {
            "id": "flow_var_vulnerabilities_data",
            "action": "flow_var",
            "data": {
                "vulnerabilities": "${response.db.to_list()}"
            },
            "next_action": "mongodb_find_update"
        },
        {
            "id": "check_var_vulnerabilities",
            "action": "switch",
            "data": {
                "conditions": [
                    {
                        "operator": "greater_than",
                        "first_expression": "${len(flow.vulnerabilities)}",
                        "second_expression": "${1}",
                        "next_action": "mongodb_find_update"
                    }
                ],
                "next_action_else": "response_success"
            },
            "next_action": "${pipeline.next_action}"
        },
        {
            "id": "mongodb_find_update",
            "action": "mongodb",
            "data": {
                "collection": "vulnerabilities",
                "action": "find_and_modify",
                "args": {
                    "query": {"id_vuln": "${flow.vulnerabilities[0].id_vuln}"},
                    "update": {"$set": "${flow.vulnerabilities[0]}"},
                    "upsert": true
                }
            }, 
            "next_action": "flow_var_contract_update"
        },
        {
            "id": "flow_var_contract_update",
            "action": "flow_var",
            "data": {
                "vulnerabilities": "${function.util.remove_from_dict(flow.vulnerabilities)}"
            },
            "next_action": "check_var_vulnerabilities"
        },
        {
            "id": "response_success",
            "action": "response",
            "data": {
                "data": {
                    "data": "${response.db.to_list()}"
                }
            },
            "next_action": null
        }
    ]
}