{
    "id": "servicenow-insert-contracts-postgres",
    "name": "Insert contracts",
    "pipeline": [
        {
            "action": "start",
            "data": {},
            "id": "start",
            "next_action": "flow_var_contracts"
        },
        {
            "id": "flow_var_contracts",
            "action": "flow_var",
            "data": {
                "contracts": "${workspace.contracts}"
            },
            "next_action": "sql_db_conn_contracts"
        },
        {
            "id": "sql_db_conn_contracts",
            "action": "sql_db",
            "data": {
                "conn_name": "socportal"
            },
            "next_action": "flow_var_db"
        },
        {
            "id": "flow_var_db",
            "action": "flow_var",
            "data": {
                "session": "${response.db.session}",
                "contract_model": "${function.models.Contracts}",
                "contract_service": "${function.services.Contracts}"
            },
            "next_action": "check_var_contracts"
        },
        {
            "id": "check_var_contracts",
            "action": "switch",
            "data": {
                "conditions": [
                    {
                        "operator": "greater_than",
                        "first_expression": "${len(flow.contracts)}",
                        "second_expression": "${0}",
                        "next_action": "insert_contracts"
                    }
                ],
                "next_action_else": "response_success"
            },
            "next_action": "${pipeline.next_action}"
        },
        {
            "id": "insert_contracts",
            "action": "run",
            "data": {
                "inserted": "${flow.contract_service(flow.session).get_or_create(flow.contract_model,flow.contracts[0]['contract'],flow.contracts[0]['description'],flow.contracts[0]['short_description'])}"
            },
            "next_action": "flow_var_contracts_update"
        },
        {
            "id": "flow_var_contracts_update",
            "action": "flow_var",
            "data": {
                "contracts": "${function.util.remove_from_dict(flow.contracts)}"
            },
            "next_action": "check_var_contracts"
        },
        {
            "id": "response_success",
            "action": "response",
            "data": {
                "data": {
                    "data": "${response.data}"
                }
            },
            "next_action": null
        }
    ]
}