{
    "id": "servicenow-worker",
    "name": "Servicenow Worker",
    "debug": true,
    "release": {
        "id": "1",
        "name": "v0.0.1"
    },
    "integrations": {
        "mongodb": {
            "socportal": {
                "host": "${env('MONGODB_HOST')}",
                "port": "${env('MONGODB_PORT')}",
                "user": "${env('MONGODB_USER')}",
                "password": "${env('MONGODB_PASSWORD')}",
                "database": "${env('MONGODB_DATABASE')}"
            }
        },
        "sql_database": {
            "socportal": {
                "sgbd": "postgresql",
                "host": "${env('SOCPORTAL_HOST')}",
                "port": "${env('SOCPORTAL_PORT')}",
                "user": "${env('SOCPORTAL_USER')}",
                "password": "${env('SOCPORTAL_PASSWORD')}",
                "database": "${env('SOCPORTAL_DATABASE')}"
            }
        }
    },
    "env": {
        "base_url": "${env('SERVICENOW_BASE_URL')}",
        "client_id": "${env('SERVICENOW_CLIENT_ID')}",
        "client_secret": "${env('SERVICENOW_CLIENT_SECRET')}",
        "client_username": "${env('SERVICENOW_USERNAME')}",
        "client_password": "${env('SERVICENOW_PASSWORD')}"
    },
    "safe_mode": {
        "enable": false,
        "safe_time": 10
    }
}


